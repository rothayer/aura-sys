    <script type="text/javascript">
      function changeShowdContent(caller, page) {
try {
        if (caller.id == "help") {
         document.getElementById("showd").innerHTML = '<h2>' + page + '</h2>';
} else {
         var url = "/" + caller.id;
      alert(url + " returns ");
alert(httpGet(url));
         document.getElementById("showd").innerHTML = httpGet(url);
}

         var buttons = new Array("about", "help", "home", "contact") ;
         
         var button = null;
                 caller.style.color = '#fa3';
                 caller.style.borderColor = '#f80';
         for (var i=0; i < buttons.length; i++) {
             button = document.getElementById(buttons[i]);
if (button != null) {
             if (caller.id != button.id) {
                 button.style.color = '';
                 button.style.borderColor = '';
             }
}
         }
} catch (err) {
    alert("error: " + err);
}
      }


function httpGet(theUrl)
{
    if (window.XMLHttpRequest)
    {// code for IE7+, Firefox, Chrome, Opera, Safari
        xmlhttp=new XMLHttpRequest();
    }
    else
    {// code for IE6, IE5
        xmlhttp=new ActiveXObject("Microsoft.XMLHTTP");
    }
    xmlhttp.onreadystatechange=function()
    {
        if (xmlhttp.readyState==4 && xmlhttp.status==200)
        {
            return xmlhttp.responseText;
        }
    }
    xmlhttp.open("GET", theUrl, false );
    xmlhttp.send();    
}
    </script>
